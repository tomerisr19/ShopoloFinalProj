<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_ShopMenu"
    android:background="@drawable/back_gradient"
    tools:ignore="SpeakableTextPresentCheck">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:ignore="UselessLeaf"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_parssed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/general_back_icon" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="משק פרידמן"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/meshekfridman"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/meshekfridman"
            tools:ignore="InvalidId"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מדור לדור"
                android:textSize="20sp"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/dorLeDor"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/dorledor"
                tools:ignore="InvalidId"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="השוק של אבי"
                android:textSize="20sp"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/aviMarket"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/akoltari"
                tools:ignore="InvalidId"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="משק ברגר"
                android:textSize="20sp"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/bergerFarm"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bergerfarm"
                tools:ignore="InvalidId"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="משפחת כהן"
                android:textSize="20sp"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/cohenFamily"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/mishpahatcohen"
                tools:ignore="InvalidId"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="דוד משה"
                android:layout_gravity="right"
                android:textSize="20sp"
                android:layout_marginLeft="230dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/dodMoshe"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/moshefarm"
                tools:ignore="InvalidId"/>

        </LinearLayout>



    </LinearLayout>


</ScrollView>